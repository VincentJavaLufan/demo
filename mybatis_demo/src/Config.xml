<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- mybatis默认支持基本数据类型的别名，但是我们可以自定义别名 。-->
	<typeAliases>
		<typeAlias alias="Emp" type="com.aaa.mybatis.Emp" />
	</typeAliases>
	<!-- 配置开发环境，可以配置多个，在具体用时再做切换 -->
	<environments default="development">
		<environment id="development">
		<transactionManager type="JDBC"></transactionManager>
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.jdbc.Driver" />
			    <property name="url" value="jdbc:mysql://192.168.108.128:3306/demo" />
			    <property name="username" value="root" />
			    <property name="password" value="5555" />
			</dataSource>
		</environment>
	</environments>
	
	<!-- 加载映射文件 mapper -->
	<mappers>
		<mapper resource="com/aaa/mybatis/Emp.xml"/>
	</mappers>  
	

</configuration>